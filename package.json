{
  "name": "steam-sale-watcher",
  "version": "1.0.0",
  "description": "Discord notifier for Steam sales by tag/company",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "dev": "node --env-file=.env --enable-source-maps --loader ts-node/esm src/index.ts",
    "register:dev": "node --env-file=.env --loader ts-node/esm src/registerCommands.ts",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "start": "node dist/index.js",
    "pretty-logs": "pino-pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@discordjs/rest": "^2.6.0",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "discord-api-types": "^0.38.21",
    "discord.js": "^14.22.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axios-mock-adapter": "^2.1.0",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
